<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CloseActivity">
    <LinearLayout
        android:id="@+id/showAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/order_all_item_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="5dp"
            android:text="默认地址:"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="20dp"
                android:text="李小二" />

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="15555787632" />
        </RelativeLayout>
        <TextView
            android:id="@+id/address_myaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="广东省 深圳市 福田区 皇岗街道办事处 "
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/settle_showRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/order_all_item_shape"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/address_describe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="共" />
        <TextView
            android:id="@+id/address_describe_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/address_describe_text"
            android:textColor="#f00"
            android:text="la"
            />
        <TextView
            android:id="@+id/address_describe_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品，需支付"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/address_describe_num"
            />
        <TextView
            android:id="@+id/address_describe_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="la"
            android:textColor="#f00"
            android:layout_toRightOf="@id/address_describe_text1"
            android:layout_alignBottom="@id/address_describe_text1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_toRightOf="@id/address_describe_price"
            android:layout_alignBottom="@id/address_describe_price"
            />

        <Button
            android:id="@+id/btn_commit_goods"
            android:layout_width="118dp"
            android:visibility="visible"
            android:layout_height="50dp"
            android:text="提交订单"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:background="#ff5e70"
            />

    </RelativeLayout>
</LinearLayout>