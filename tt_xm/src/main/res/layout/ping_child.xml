<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_list"

        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/remait_image"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            app:placeholderImage="@mipmap/ic_launcher_round"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/remait_name"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:lines="3"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="测试"/>

            <TextView
                android:id="@+id/remait_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:lines="3"
                android:text="测试"
                android:textColor="#ff0400"
                android:textSize="@dimen/sp_12" />


            <Button
                android:id="@+id/remait_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/order_button_payment_shape"
                android:text="去评价"
                android:textColor="#fff" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>